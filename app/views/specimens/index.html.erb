      <section class="jumbotron text-center">
        <div class="container">
          <h2 class="jumbotron-heading">Digital Specimen Explorer</h2>
          <p class="lead text-muted">This gallery provides an interface to explore digital specimens registered in the ICEDIG digital specimen repository.</p>
          <p>
            <a href="#" class="btn btn-primary my-2">Add Specimen</a>
            <a href="#" class="btn btn-secondary my-2">List by category</a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
	    <% @dsdata.each do |dsdatum| %>
	      <% @id=dsdatum.id.split("/")[1] %>
	      <% @scientificName = dsdatum.scientificName %>
   	      <% @countryName = dsdatum.country %>
	      <% if !@id.nil? %>
		<%= render partial: 'specimen_card' , locals: {specimen_id: @id, scientific_name: @scientificName, specimen_origin:  @countryName } %>
	      <% end %>
	    <% end %>
          </div><!--row-->
        </div><!--container-->
      </div><!--class album py-5 bg-light -->

    